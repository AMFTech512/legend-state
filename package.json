{
    "name": "@legendapp/state",
    "version": "0.10.0-next.1",
    "description": "legend-state",
    "sideEffects": false,
    "private": true,
    "type": "module",
    "main": "./index.js",
    "module": "./index.esm.js",
    "types": "./index.d.ts",
    "files": [
        "**"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "build": "rollup -c rollup.config.ts && cp package.json dist/package.json && rm -rf dist/tests && rm dist/*.tsbuildinfo && json -I -f dist/package.json -e \"this.private=false; this.devDependencies=undefined; this.scripts=undefined\"",
        "test": "jest",
        "preversion": "npm run build",
        "postversion": "git push --follow-tags",
        "jestclear": "jest --clearCache",
        "publish:preminor": "npm version preminor && npm publish",
        "publish:prerelease": "npm version prerelease && npm publish",
        "checksize:core": "npx esbuild ./testbundles/bundlecore.js --bundle --outfile=temp-built.js --minify && gzip temp-built.js && stat -f%z ./temp-built.js.gz && rm temp-built.js.*",
        "checksize:react": "npx esbuild ./testbundles/bundlereact.js --bundle --outfile=temp-built.js --minify --external:react && gzip temp-built.js && stat -f%z ./temp-built.js.gz && rm temp-built.js.*",
        "checksize": "npm run checksize:core && npm run checksize:react"
    },
    "exports": {
        ".": {
            "import": "./index.esm.js",
            "require": "./index.js"
        },
        "./internal": {
            "import": "./internal.esm.js",
            "require": "./internal.js"
        },
        "./local-storage": {
            "import": "./local-storage.esm.js",
            "require": "./local-storage.js"
        },
        "./mmkv": {
            "import": "./mmkv.esm.js",
            "require": "./mmkv.js"
        },
        "./persist": {
            "import": "./persist.esm.js",
            "require": "./persist.js"
        },
        "./react": {
            "import": "./react.esm.js",
            "require": "./react.js"
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.1",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.4",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.223",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^26.0.24",
        "@types/react": "^18.0.1",
        "@types/react-dom": "^18.0.0",
        "jest": "^27.0.6",
        "json": "^11.0.0",
        "prettier": "^2.7.1",
        "react": "^18.0.0",
        "react-native-mmkv": "^2.4.3",
        "react-test-renderer": "^18.2.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.77.2",
        "ts-jest": "^27.0.4",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4"
    },
    "peerDependencies": {
        "react": ">=16.8",
        "react-native-mmkv": "^2"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-native-mmkv": {
            "optional": true
        }
    },
    "author": "Legend <contact@legendapp.com> (https://github.com/LegendApp)",
    "keywords": [
        "react",
        "react-native",
        "state",
        "hooks",
        "proxy"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LegendApp/legend-state.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LegendApp/legend-state/issues"
    },
    "homepage": "https://github.com/LegendApp/legend-state#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    }
}
